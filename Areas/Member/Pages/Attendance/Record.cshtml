@page
@model KintaiSystem.Areas.Member.Pages.Attendance.RecordModel
<div class="text-center">
    <h1 class="display-4">@Model.Title</h1>
    <h1 id="time"></h1>
     <script>
    time();
    function time(){
        var now = new Date();
        document.getElementById("time").innerHTML = now.toLocaleTimeString();
    }
    setInterval('time()',1000);
    </script>
</div>

<a id="skippy" class="sr-only sr-only-focusable" href="#content">
    <div class="container">
        <span class="skiplink-text">Skip to main content</span>
    </div>
</a>

<div class="container w-75 m-auto">
@using (Html.BeginForm("Record", "Attendance", new { area = "Member" }, FormMethod.Post, true, new { @class = "form-Record" }))
{
    <div class="row mt-3">
        <div class="col-md text-center">
            @Html.Label("str1", "本日は", new { @class = "col-md" })
            <h4 class="col-md">@Model.ViewDate</h4>
            @Html.Label("str2", "です。", new { @class = "col-md" })
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-3 text-center my-3">
            <input type="submit" asp-page-handler="Start" class="btn btn-success rounded-circle p-0" style="width: 5rem; height: 5rem;" value="出勤" disabled="@(Model.DisabledBtnStart)"/>
        </div>
        <div class="col-sm-3 text-center my-3">
            <input type="submit" asp-page-handler="End" class="btn btn-danger rounded-circle p-0" style="width: 5rem; height: 5rem;" value="退勤" disabled="@(Model.DisabledBtnEnd)"/>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
}
</div>

